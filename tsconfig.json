{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "baseUrl": ".",                              // ✅ Ajouté
    "paths": {
      "@/*": ["src/*"]                           // ✅ Ajouté
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
