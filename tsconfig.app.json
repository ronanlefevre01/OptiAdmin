{
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "types": ["vite/client"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "vite-env.d.ts"
  ],
  "exclude": [
    "src/app/api/**",
    "src/lib/db.ts",
    "src/lib/auth.ts",
    "api/**"
  ]
}
